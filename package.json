{
  "version": "0.0.1-alpha.1",
  "name": "@youfoundation/js-monorepo",
  "author": "YouFoundation",
  "description": "Monorepo for the JS Libs of YouFoundation",
  "workspaces": [
    "packages/js-lib",
    "packages/ui-lib",
    "packages/*"
  ],
  "scripts": {
    "build": "npm install && npm run build -workspaces",
    "clean-build": "npm run clean; npm run build",
    "build-libs": "npm run build -w ./packages/js-lib -w ./packages/ui-lib -w ./packages/common-app",
    "owner-app": "npm install && npm start -w ./packages/owner-app",
    "public-app": "npm install && npm start -w ./packages/public-app"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/youfoundation"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YouFoundation/dotyoucore-js.git"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "prettier": "^2.7.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "^4.2.1",
    "vite-plugin-dts": "^2.3.0"
  }
}
